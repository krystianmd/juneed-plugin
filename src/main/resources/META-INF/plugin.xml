<idea-plugin>
    <id>com.madrakrystian.JUneed</id>
    <name>JUneed</name>
    <vendor email="madrakrystian@gmail.com" url="https://www.madrakrystian.com">Krystian Madra</vendor>

    <description><![CDATA[
        Soon
        ]]>
    </description>

    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- CONTEXTS -->
        <liveTemplateContext implementation="com.madrakrystian.juneed.template.live.JavaTestStatementContext"/>

        <!-- LIVE TEMPLATES -->
        <defaultLiveTemplates file="/liveTemplates/Assertions.xml"/>
        <defaultLiveTemplates file="/liveTemplates/FluentAssertions.xml"/>

        <!-- INTENTIONS -->
        <intentionAction>
            <className>com.madrakrystian.juneed.intention.AssertThrowsConverter</className>
            <category>Assertions conversion intentions</category>
        </intentionAction>

        <!-- INSPECTIONS -->
        <localInspection language="JAVA"
                         displayName="ExceptionOfType used instead of enriched assertion for commonly used exceptions"
                         groupPath="Java"
                         groupBundle="messages.InspectionsBundle"
                         groupKey="group.names.verbose.or.redundant.code.constructs"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="com.madrakrystian.juneed.inspection.CommonExceptionAssertionInspection"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>