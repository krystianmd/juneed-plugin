<idea-plugin>
    <id>com.madrakrystian.JUneed</id>
    <name>JUneed</name>
    <vendor email="madrakrystian@gmail.com" url="https://www.madrakrystian.com">Krystian Madra</vendor>

    <description><![CDATA[
        Soon
        ]]>
    </description>

    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- CONTEXTS -->
        <liveTemplateContext implementation="com.madrakrystian.juneed.template.live.JavaTestStatementContext"/>
        <liveTemplateContext implementation="com.madrakrystian.juneed.template.live.JavaTestDeclarationContext"/>

        <!-- LIVE TEMPLATES -->
        <defaultLiveTemplates file="/liveTemplates/Assertions.xml"/>
        <defaultLiveTemplates file="/liveTemplates/FluentAssertions.xml"/>
        <defaultLiveTemplates file="/liveTemplates/TestMethods"/>

        <!-- INTENTIONS -->
        <intentionAction>
            <className>com.madrakrystian.juneed.intention.AssertThrowsConverter</className>
            <category>Assertions conversion intentions</category>
        </intentionAction>

        <!-- MACROS -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>