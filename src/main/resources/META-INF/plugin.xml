<idea-plugin>
    <id>com.madrakrystian.JUneed</id>
    <name>JUneed</name>
    <vendor email="madrakrystian@gmail.com" url="https://www.madrakrystian.com">Krystian Madra</vendor>

    <description><![CDATA[
        Generates test classes based on pre-defined live test templates:</br>
          <ul>
            <li>Junit nested java class (type "jnt")</li>
            <ul>
                <li>@DisplayName annotations</li>
                <li>A class with @Nested annotation</li>
                <li>A method with prepared given/when/then comment convention</li>
            </ul>
          </ul>
        ]]>
    </description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- CONTEXT -->
        <liveTemplateContext implementation="com.madrakrystian.juneed.template.live.JavaTestsContext"/>

        <!-- LIVE TEMPLATES -->
        <defaultLiveTemplates file="/liveTemplates/JavaTesting.xml"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>