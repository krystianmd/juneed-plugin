<idea-plugin>
    <id>com.madrakrystian.JUneed</id>
    <name>JUneed</name>
    <vendor email="madrakrystian@gmail.com" url="https://www.madrakrystian.com">Krystian Madra</vendor>

    <description><![CDATA[
        Soon
        ]]>
    </description>

    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- CONTEXTS -->
        <liveTemplateContext implementation="com.madrakrystian.juneed.template.context.JavaTestStatementContext"/>

        <!-- LIVE TEMPLATES -->
        <defaultLiveTemplates file="/liveTemplates/Assertions.xml"/>
        <defaultLiveTemplates file="/liveTemplates/FluentAssertions.xml"/>

        <!-- INTENTIONS -->
        <intentionAction>
            <className>com.madrakrystian.juneed.intention.AssertThrowsConverter</className>
            <category>Assertions conversion intentions</category>
        </intentionAction>

        <!-- INSPECTIONS -->
        <localInspection language="JAVA"
                         displayName="ExceptionOfType used instead of enriched assertion for commonly used exceptions"
                         groupPath="Java"
                         groupBundle="messages.InspectionsBundle"
                         groupKey="group.names.verbose.or.redundant.code.constructs"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="com.madrakrystian.juneed.inspection.CommonExceptionAssertionInspection"/>
    </extensions>

    <actions>
        <group id="ParametrizedTestGenerateGroup" text="Parametrized Test Method" popup="true">
            <add-to-group group-id="GenerateGroup" anchor="first"/>
            <action id="GenerateParameterizedTestWithStringsSourceMethod"
                    class="com.madrakrystian.juneed.action.GenerateParameterizedTestWithStringsSourceAction" text="Parametrized Test Method With Strings Source">
            </action>
            <action id="GenerateParameterizedTestWithNullAndEmptySourceMethod"
                    class="com.madrakrystian.juneed.action.GenerateParameterizedTestWithNullAndEmptySourceAction" text="Parametrized Test Method With Null And Empty Source">
            </action>
            <action id="GenerateParameterizedTestWithMethodSourceMethod"
                    class="com.madrakrystian.juneed.action.GenerateParameterizedTestWithMethodSourceAction" text="Parametrized Test Method With Method Source">
            </action>
            <action id="GenerateParameterizedTestWithEnumsSourceMethod"
                    class="com.madrakrystian.juneed.action.GenerateParameterizedTestWithEnumsSourceAction" text="Parametrized Test Method With Enums Source">
            </action>
            <action id="GenerateParameterizedTestWithIntsSourceMethod"
                    class="com.madrakrystian.juneed.action.GenerateParameterizedTestWithIntsSourceAction" text="Parametrized Test Method With Ints Source">
            </action>
        </group>
    </actions>
</idea-plugin>